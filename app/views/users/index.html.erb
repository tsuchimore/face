<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <%= profile_img(user) %>
        <%= link_to '詳細', followers_user_path(user) %>

      <% if user.id != current_user.id %>

          <div class="item">
            <%= link_to user.name, user %>

          </div>
          <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>

      <% end %>
      </div>
  <% end %>
</div>